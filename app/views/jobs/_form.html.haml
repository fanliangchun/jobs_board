= simple_form_for(@job, html: { class: 'form-horizontal' }) do |f|
  = f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category"}, input_html: { class: "dropdown-t"}
  = f.input :title, label: "Job Title", input_html: { class: "dropdown-t"}
  = f.input :description, label: "Job Description", input_html: { class: "dropdown-t"}
  = f.input :company, label: "Your Company", input_html: { class: "dropdown-t"}
  = f.input :url, link: "Link to Job", input_html: { class: "dropdown-t"}
  %br/
  = f.button :submit
